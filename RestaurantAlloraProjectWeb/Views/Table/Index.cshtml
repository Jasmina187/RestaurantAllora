@using RestaurantAlloraProjectViewModels.Table
@model List<TableViewModel>
<div class="d-flex justify-content-between align-items-center">
    <h2>Маси</h2>

    @if (User.IsInRole("Employee") || User.IsInRole("Manager") || User.IsInRole("Admin"))
    {
        <a asp-action="Create" class="btn btn-success">+ Нова маса</a>
    }
</div>

@if (!Model.Any())
{
    <p class="mt-3">Няма въведени маси.</p>
}
else
{
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Номер</th>
                <th>Капацитет</th>
                <th>Статус</th>
                @if (User.IsInRole("Employee") || User.IsInRole("Manager") || User.IsInRole("Admin"))
                {
                    <th>Действия</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var t in Model)
            {
                <tr>
                    <td>@t.TableNumber</td>
                    <td>@t.CapacityOfTheTable</td>
                    <td>@t.StatusOfTheTable</td>
                    @if (User.IsInRole("Employee") || User.IsInRole("Manager") || User.IsInRole("Admin"))
                    {
                        <td class="d-flex gap-2">
                            <a asp-action="Edit" asp-route-id="@t.TableId" class="btn btn-sm btn-primary">Edit</a>
                            <a asp-action="Delete" asp-route-id="@t.TableId" class="btn btn-sm btn-danger">Delete</a>
                        </td>
                    }
                </tr>
            }
        </tbody>
    </table>
}
