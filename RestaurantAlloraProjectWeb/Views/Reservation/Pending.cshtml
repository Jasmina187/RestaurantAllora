@using RestaurantAlloraProjectViewModels.Reservation
@model List<ReservationIndexViewModel>

<h2>Чакащи резервации</h2>

@if (!Model.Any())
{
    <p class="mt-3">Няма чакащи резервации.</p>
}
else
{
    <table class="table table-striped mt-3">
        <thead>
            <tr>
                <th>Дата</th>
                <th>Клиент</th>
                <th>Маса</th>
                <th>Капацитет</th>
                <th>Гости</th>
                <th>Статус</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.ReservationDate.ToString("dd.MM.yyyy HH:mm")</td>
                    <td>@(string.IsNullOrWhiteSpace(r.CustomerName) ? "-" : r.CustomerName)</td>
                    <td>@r.TableNumber</td>
                    <td>@r.CapacityOfTheTable</td>
                    <td>@r.NumberOfGuests</td>
                    <td>@r.Status</td>
                    <td class="d-flex gap-2">
                        <form asp-action="Approve" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.ReservationId" />
                            <button type="submit" class="btn btn-sm btn-success">Одобри</button>
                        </form>

                        <form asp-action="Reject" method="post">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="id" value="@r.ReservationId" />
                            <button type="submit" class="btn btn-sm btn-danger">Откажи</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}